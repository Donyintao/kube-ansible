[Unit]
Description=kube-scheduler Service
After=network.target
 
[Service]
EnvironmentFile=-{{ KUBE_HOME_PATH }}/etc/kube-config
EnvironmentFile=-{{ KUBE_HOME_PATH }}/etc/kube-scheduler
ExecStart={{ KUBE_HOME_PATH }}/bin/kube-scheduler \
            $KUBE_LOGTOSTDERR \
            $KUBE_LOG_LEVEL \
            $KUBE_MASTER \
            $KUBE_SCHEDULER_ARGS
 
Restart=on-failure
LimitNOFILE=65536
 
[Install]
WantedBy=multi-user.target
